{
    "buildCommand": "echo 'No build needed'",
    "outputDirectory": "public",
    "redirects": [
        {
            "source": "/:path*",
            "has": [
                {
                    "type": "host",
                    "value": "www.croevo.com"
                }
            ],
            "destination": "https://croevo.com/:path*",
            "permanent": true
        }
    ],
    "rewrites": [
        {
            "source": "/api/:path*",
            "destination": "/api/index.js"
        }
    ]
}